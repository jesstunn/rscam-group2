{
  "name": "FEniCS Development Environment",
  "build": {
    "context": "..",
    "dockerfile": "../Dockerfile"
  },
  "remoteUser": "fenics",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ],
      "settings": {
        "python.terminal.activateEnvironment": true,
        "remote.downloadExtensionsFromMarketplace": true
      },
      "userSettings": {
        "update.channel": "none",
        "workbench.colorTheme": "Default Dark+",
        "extensions.autoUpdate": false,
        "extensions.autoCheckUpdates": false
      }
    },
    "codespaces": {
      "openFiles": []
    }
  },
  "hostRequirements": {
    "vsCodeVersion": "1.85"
  },
  "forwardPorts": [8888],
  "portsAttributes": {
    "8888": {
      "label": "Jupyter Notebook",
      "onAutoForward": "openBrowser"
    }
  },
  "runArgs": ["--ipc=host"],
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "postCreateCommand": "echo 'FEniCS environment ready!'"
}
