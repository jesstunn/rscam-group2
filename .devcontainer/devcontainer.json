{
  "name": "Simple FEniCS",
  "image": "quay.io/fenicsproject/stable:latest",
  "remoteUser": "fenics",
  "updateRemoteUserUID": true,
  "containerUser": "fenics",
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python"]
    }
  },
  "runArgs": ["--init"],
  "overrideCommand": true,
  "mounts": [
    "source=${localWorkspaceFolder},target=/home/fenics/workspace,type=bind,consistency=cached"
  ],
  "workspaceFolder": "/home/fenics/workspace"
}
